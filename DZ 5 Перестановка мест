string name = "Иванов";
string surname = "Иван";

Console.WriteLine("Ваше имя: " + name);
Console.WriteLine("Ваша фамилия: " + surname);
Console.WriteLine("Данные перепутаны!");

(name, surname) = (surname, name);

Console.WriteLine("Ваше имя: " + name);
Console.WriteLine("Ваша фамилия: " + surname);
Console.WriteLine("Данные верны!");
Console.ReadKey();
